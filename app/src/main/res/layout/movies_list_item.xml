<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/main_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_padding_10">

        <RelativeLayout
            android:id="@+id/top_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/poster_img"
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:scaleType="centerCrop"/>

            <TextView
                android:id="@+id/name_lbl"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginLeft="@dimen/margin_padding_5"
                android:layout_marginRight="@dimen/margin_padding_5"
                android:layout_toLeftOf="@+id/arrow_btn"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:textColor="@android:color/black"
                android:maxLines="3"
                android:ellipsize="end"
                android:textSize="@dimen/text_size_18"
                android:layout_toRightOf="@+id/poster_img"/>

            <ImageButton
                android:id="@+id/arrow_btn"
                android:layout_width="@dimen/margin_padding_10"
                android:layout_height="@dimen/margin_padding_10"
                android:layout_marginRight="@dimen/margin_padding_5"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/bottom_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_padding_5"
            android:layout_below="@+id/top_layout">

            <TextView
                android:id="@+id/date_lbl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_padding_10"
                android:textSize="@dimen/text_size_15"
                android:textColor="@android:color/darker_gray" />

            <TextView
                android:id="@+id/adult_lbl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_15"
                android:layout_alignParentRight="true"
                android:textColor="@android:color/darker_gray" />

        </RelativeLayout>

    </RelativeLayout>

    <View
        android:id="@+id/div1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_padding_1"
        android:layout_marginTop="@dimen/margin_padding_2"
        android:background="@android:color/black"
        android:layout_below="@+id/main_layout"/>

</RelativeLayout>